{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["astro/client"],
		"baseUrl": ".",
		"paths": {
			"@*": ["./src/*"],
			"@globals": ["src/components/global"],
			"@component/*": ["src/components/*"],
			"@style/*": ["src/styles/*"],
			"@util/*": ["utils/*"],
			"@img/*": ["src/assets/img/*"],
			"@svg/*": ["src/assets/svg/*"],
			"@icon/*": ["src/assets/svg/icon/*"]
			// "@stores/*": ["src/stores/*"],
			// "@layouts/*": ["src/layouts/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	}
}
